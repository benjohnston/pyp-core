@media only screen and (min-width: 800px) {
    header[role='banner'] {
        padding: 1.555556em 0 1.555556em;
    }
    header[role='banner'] a.logo {
        float: left;
        width: 25%;
    }
    .blog-title, header[role='banner'] ul {
        float: left;
        width: 25%;
        margin: 0;
    }
    .blog-title, header[role='banner'] ul li {
        display: block;
        margin: 0;
    }
    .blog-posts, header[role='banner'] h1 {
        float: left;
        margin: 0;
        width: 75%;
        padding-left: 0.77777778em;
        font-size: 1em;
        text-transform: none;
        font-weight: 100;
        color: #2E3438;
        line-height: 26px;
    }
    .blog-posts, header[role='banner'] h1 p {
        margin: 0;
    }
    header[role='banner']:after {
        content: '';
        clear: both;
        display: block;
    }
}

@media only screen and (min-width: 1100px) {
    header[role='banner'] {
        padding-left: 0;
        padding-right: 0;
    }
}

header[role='banner'] nav a, footer nav a {
    color: #aaaaaa;
    border: none;
}

header[role='banner'] nav a.active, footer nav a.active {
    color: #444444;
    font-weight: 500;
}

header[role='banner'] nav a:hover, footer nav a:hover {
    color: #444444;
    border: none;
}

