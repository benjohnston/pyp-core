
header[role='banner'] {
    //padding: 1.555556em;
    border-bottom: 1px solid #aaaaaa;
}

#about header {
    border-bottom: 0;
}

header[role='banner'] ul {
    list-style: none;
    margin: 1.5em 0;
    padding: 0;
}

header[role='banner'] ul li {
    display: inline-block;
    margin-right: 1.5em;
}

header[role='banner'] a.logo {
    border: 0;
}

@media (min-width: 970px) {
    header[role='banner'] h1 {
        margin-top: 26px;
    }
}
@media (max-width: 970px) {
    header[role='banner'] h1 {
        margin-top: 0;
    }
}

@media only screen and (min-width: 600px) {
    header[role='banner'] {
        padding: 1.555556em 0 1.555556em;
    }
}

@media only screen and (min-width: 800px) {
    header[role='banner'] {
        padding: 3em 0 2.55556em;
    }
    header[role='banner'] a.logo {
        float: left;
        width: 25%;
    }
    header[role='banner'] ul {
        float: left;
        width: 25%;
        margin: 0;
    }
    header[role='banner'] ul li {
        display: block;
        margin: 0;
    }
    header[role='banner'] h1 {
        float: left;
        margin: 0;
        width: 75%;
        padding-left: 0.77777778em;
        font-size: 1em;
        text-transform: none;
        font-weight: 100;
        color: #51595D;
        line-height: 26px;
    }
    header[role='banner'] h1 p {
        margin: 0;
    }
    header[role='banner']:after {
        content: '';
        clear: both;
        display: block;
    }
}

@media only screen and (min-width: 1100px) {
    header[role='banner'] {
        padding-left: 0;
        padding-right: 0;
    }
}

header[role='banner'] nav a, footer nav a {
    color: #aaaaaa;
    border: none;
}

header[role='banner'] nav a.active, footer nav a.active {
    color: #444444;
    font-weight: 500;
}

header[role='banner'] nav a:hover, footer nav a:hover {
    color: #444444;
    border: none;
}

h1 {
    font-size: 1em;
    text-transform: none;
    font-weight: 100;
    color: #51595D;
    line-height: 26px;
}


li.primary-nav.first.strong > a {
font-weight: 700;
color: #51595D;
}
@media (max-width: 620px) {
    a.logo {
        display: none;
    }
    nav h1 {
        display: none;
    }
    .product-description {
        display: none;
    }
}

@media (max-width: 540px) {
    .share-buttons {
        text-align: center;
    }
}

@media (max-width: 480px) {
  header[role='banner'] a.logo {
    text-align: center;
  }
}
